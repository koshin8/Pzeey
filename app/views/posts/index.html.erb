<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <div>
    <strong>body:</strong>
    <%= post.body %>

    <% if post.image.attached? %>
      <%= image_tag post.image %>
    <% end %>
  </div>
  <%= link_to 'Show', post %>
<% end %>

