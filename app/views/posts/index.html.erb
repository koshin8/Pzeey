<div class="container">
  <div class="row g-0">
    <% @posts.each do |post| %>
      <div class="col-sm-4">
        <div class="card h-100">
          <div class="post-item">
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "post-image img-fluid" %>
            <% end %>
          </div>
          <div class="card-body">
            <strong class="d-block mb-2">body:</strong>
            <p class="card-text"><%= post.body %></p>
            <%= link_to 'Show', post, class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

